/* pages/publish/publish.wxss */
@import "../../common/lib/weui.wxss";
@import "./assets/iconfont.wxss";



.ql-container {
  width: 100%;
  min-height:180px;max-height: 180px;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}





.faceImageView{
  position: relative;
  width:200rpx;
  height:200rpx;
  background-color: grey;
  color: white;
  /* border: 1rpx solid red; */
}
.faceImageView text{
  font-size: 20rpx;
  width: fit-content;
  /* border: 1px solid red; */
  position: absolute;
  left: 10%;
  top: 45%;
}
.faceImageView image{
  width: 100%;
  height: 100%;
}
.inputtitle{
  height: 80rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 10px;
  font-size: medium;
  font-style: italic;
}
.greyline{
  background-color: grey;
  opacity: 0.15;
  height: 5rpx;
}

.myList{
  padding: 10rpx;
  flex: 1;
  display: flex;
  align-content: center;
  flex-direction: row;
  width: 100%;
  /* margin: auto 0; */
  background-color: #fff;
  border-bottom: 1rpx solid rgba(128, 128, 128, 0.692);
  
  /* border: 1rpx solid red; */
}
.myList image{
  /* border: 1rpx solid black; */
  width: 40rpx;
  height: 40rpx;
}
.myList text{
  margin-left: 20rpx;
  color: #696868;
}


.imageright{
  
  margin-left: auto;
}


.bottomview{ 
  /* border: 1rpx solid red; */
  display: flex;
  flex-direction: row;
  padding: 15rpx 0;
}
.bottomview button{
  color: white;
  background: green;
  padding: 10rpx;
  margin: 0;
  width: fit-content;
  /* margin-right: 10rpx; */
}
