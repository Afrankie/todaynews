<!-- 自定义顶部栏 -->
<view class="nav-bar" style="height:{{navBarHeight}}px;">
    <image src="/images/search.png" style="height:{{menuHeight - 15}}px; min-height:{{menuHeight - 15}}px; line-height:{menuHeight - 15}}px; left:{{menuRight + 10}}px; bottom:{{menuBotton + 6}}px;"></image>
    <input catchtap="goto" class="search" disabled="true" placeholder="{{ph}}" style="height:{{menuHeight}}px; min-height:{{menuHeight}}px; line-height:{menuHeight}}px; left:{{menuRight}}px; bottom:{{menuBotton}}px;"></input>
</view>

