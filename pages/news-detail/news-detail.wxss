/* 操作栏 */
.icon-box{
  margin: auto;
  position: relative;
}
.badge{
  background-color: #fff;
  margin: auto;
  top: -.4em;right: -.7em;
  position: absolute;
}
.caozuo{
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  padding: 10rpx 20rpx;
  background-color: white;
}
.xpl-box{
  width: 55%;
  padding: 6rpx 18rpx;
  border-radius: 30rpx;
  background: rgba(128, 128, 128, 0.094);
}
.xpl-box text{
  font-size: 22rpx;
  margin-left: 10rpx;
}

.icon{
  margin: auto;
}


/* 输入框 */
.shuru-box{
  width: 100%;
  border-radius: 5rpx;
  padding: 23rpx 27rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
}

.shuru{
  margin: auto;
  width: 80%;
  font-size: 28rpx;
  border-radius: 5rpx;
  background: rgba(128, 128, 128, 0.074);
  padding: 20rpx;
}
.shuru-box text{
  padding-right: 6rpx;
  width: 10%;
  font-size: 30rpx;
}

/* 评论相关 */
.cm{
  margin: 20rpx 25rpx 20rpx 25rpx;
}
.line1{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: baseline;
}
.user_image{
  width: 9%;
  height: 60rpx;
  border-radius: 410rpx;
}
.user_name{
  margin: auto;
  width: 80%;
  padding-left: 20rpx;
  font-size: 26rpx;
}
.zanpic-box{
  margin: auto;
  width: 5%;
}
.thumbs_up{
  width: 28rpx;
  height: 28rpx;
}
.line2{
  padding-left: 80rpx;
  font-size: 30rpx;
  letter-spacing: 1rpx;
  
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 6;
  -webkit-box-orient: vertical;
}
.line3{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding-left: 80rpx;
  font-size: 27rpx;
}
.line3 text{
  font-size: 23rpx;
  line-height: 40rpx;
  margin-right: 15rpx;
  letter-spacing: 1rpx;
}
.huifu{
  background-color: rgba(128, 128, 128, 0.105);
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
}
.huifu-time{
  color: grey;
}
.nocm{
  margin: 15rpx;
  text-align: center;
  font-size: 25rpx;
  line-height: 100rpx;
}
.zan{
  margin: auto;
  font-size: 25rpx;
}

/* 文章主题 */
.article{
  margin: 20rpx;
}

.title{
  font-size: 40rpx;
  letter-spacing: 2rpx;
}

.content{
  font-size: 32rpx;
  letter-spacing: 2rpx;
  /* line-height: 5rpx; */
}

.basic-info{
  border-left: 6rpx solid rgba(128, 128, 128, 0.11);
  display: flex;
  flex-direction: row;
}
.basic-info text{
  font-size: 22rpx;
  color: rgba(128, 128, 128, 0.363);
  margin-left: 15rpx;
  margin-right: 15rpx;
  line-height: 60rpx;
}
.zhanwei{
  height: 70rpx;
}

/* =====轮播图======= */
.swiper-wrapper{
    height: 400rpx;
}

.slide-image {
  width: 100%;
  height: 400rpx;
  z-index: -1;
}

.swiper-title {
  position: absolute;
  bottom: 0;
  background-color: rgba(117, 117, 117, 0.7);
  color: #ffffff;
  padding:16rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  
  width: 100%;
  word-wrap: break-all;
}
