.tuijian{
  color: #615e5e;
  font-size: 1.2rem;
  margin: 30rpx 30rpx 30rpx 20rpx;
}
.tuijianList{
  width:722rpx;
  box-sizing: border-box;
  /* padding-right:-14rpx; */
  flex-direction:row;
 
}
.tuijianList:after{
  content: "";
  display: block;
  clear:both;
}
.tuijianItem:after{
  content: "";
  display: block;
  clear:both;
}
.tuijianItem{
  width:346rpx;
  height:auto;
  padding:14rpx;
  padding-bottom:0;
  margin-bottom:30rpx;
  box-sizing: border-box;
  text-align: center;
  background:#fff;
   /* float:left;  */
   display: inline-block;
   margin-right:14rpx; 
   box-shadow: 0 2px 6px 0 rgba(0,0,0,.12), 0 0 8px 0 rgba(0,0,0,.04);
   position: relative;
}
.tuijianItem image{
  width:317rpx;
  height:292rpx;
}
.tuijianItem text{
    width:100%;
    height:60rpx; 
    line-height: 60rpx;
    text-align: center;
    color:#636363;
    font-size:11pt;
}