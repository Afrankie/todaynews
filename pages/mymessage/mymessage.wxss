/* tab自定义样式 */
.tab-container{
	width: 100%;
	height: 40px;
	background: #FFF;
}
.tab{
	/* padding-left: 20px; */
	width: 100%;
	height: 100%;
	white-space: nowrap;
	overflow: hidden;
	line-height: 39px;
	background: #FFF;
  text-align: center;
}
.tab-item{
	font-family: SourceHanSansCN-Normal;
	display: inline-block;
   
	margin-right: 40rpx;
  /* margin-left: 35%; */
	font-size: 14px;
	color: rgba(34,34,34,1);
}
.tab-item:last-child {
	margin-right: 40rpx;
}
.item{
	width:fit-content;
	font-family: SourceHanSansCN-Normal;
	/* margin: auto; */
	font-size: 14px;
	height: 39px;
}

.active{
  color: #e0620d;
	border-bottom: 2px solid #e0620d;
	font-weight:600;
}

.result-content {
  margin-top: 10px;
  background: #FFF;
  position: absolute;
  z-index: 1;
  width: 100%;
  display: none;
}
.show-content {
  height: auto;
  z-index: 2;
  display: block;
  overflow: auto;
}
