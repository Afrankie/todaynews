}
/* 无图展示类型 */
.card2 {
  height: auto;
  margin: 16rpx 20rpx;
  border-bottom: 1px solid rgba(128, 128, 128, 0.196);
}
.cardText{
  width: 68%;
  height: 180rpx;
}
.title{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  margin: 5rpx;
}
