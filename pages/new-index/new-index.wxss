/* =====导航栏======== */
.box{
  height: 50rpx;
}
.navbar {
  width: 100%;
  /* height: 90rpx; */
  /* 文本不换行 */
  white-space: nowrap;
  display: flex;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
  background: #fff;
  align-items: center;
  /* 固定在顶部 */
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  z-index: 999;
}
.nav-item {
  padding-left: 15rpx;
  padding-right: 15rpx;
  height: 100%;
  display: inline-block;
  /* 普通文字大小 */
  font-size: 32rpx;
}
.nav-text {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 1rpx;
  box-sizing: border-box;
}
.tab-on {
  color: #ff0000c0;
  /* 选中放大 */
  font-size: 34rpx !important;
  font-weight: 600;
  /* border-bottom: 4rpx solid #fbbd08 !important; */
}
