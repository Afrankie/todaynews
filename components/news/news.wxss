/* 右图展示类型 */
.card1 {
  margin: 16rpx 20rpx;
  border-bottom: 1px solid rgba(128, 128, 128, 0.196);
  background-color: #ffffff;
  margin: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
}
