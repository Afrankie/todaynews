.title{
  display: block;
  overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
  width: 100%;
  color: black;
  font-weight: bolder;
  font-size:16px;
}
.userimage{
  margin-right: 3px;
  height: 19px;
  width: 19px;
  border-radius: 100%;
}
.likeimage{
  
  margin-left: auto;
  margin-right: 3px;
  height: 15px;
  width: 15px;
  
}
.num{
  /* margin-left: auto; */
  margin-right: 5px;
}
.result-content {
  margin-top: 10px;
  background: #FFF;
  position: absolute;
  z-index: 1;
  width: 100%;
  display: none;
}
.show-content {
  height: auto;
  z-index: 2;
  display: block;
  overflow: auto;
}
.one{
  margin-top: 3px;
  font-size: 10px;
  display: flex;
  flex-direction: row;
  height: 20px;
  /* border: 1px solid red; */
}


/* tab自定义样式 */
.tab-container{
	width: 100%;
	height: 40px;
	background: #FFF;
}
.tab{
	padding-left: 20px;
	width: 100%;
	height: 100%;
	white-space: nowrap;
	overflow: hidden;
	line-height: 39px;
	background: #FFF;
  text-align: center;
}
.tab-item{
	font-family: SourceHanSansCN-Normal;
	display: inline-block;
   
	/* margin-right: 40px; */
  margin-right: 40rpx;
	font-size: 14px;
	color: rgba(34,34,34,1);
}
.tab-item:last-child {
	margin-right: 40rpx;
}
.item{
	width:fit-content;
	font-family: SourceHanSansCN-Normal;
	margin: auto;
	font-size: 14px;
	height: 39px;
}

.active{
  color: #e0620d;
	border-bottom: 2px solid #e0620d;
	font-weight:600;
}

.hidden{
  display: none !important;
}

.show{
  display: flex !important;
}

.addbtn{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  border-radius: 100%;
  bottom: 20rpx;
  left: 20rpx;
  background: #e0620d;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 2;
}

.plusicon{
  width: 70rpx;
  height: 70rpx;
  margin: auto 0;  
}

#box1{
  position: absolute;
  z-index: 1;
}
