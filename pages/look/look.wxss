}
.tuijianList:after{
  content: "";
  display: block;
  clear:both;
}
.tuijianItem:after{
  content: "";
  display: block;
  clear:both;
}
.tuijianItem{
  width:346rpx;
  height:auto;
  padding:14rpx;
  padding-bottom:0;
  margin-bottom:30rpx;
  box-sizing: border-box;
  text-align: left;
  background:#fff;
   /* float:left;  */
   display: inline-block;
   /* margin-right:14rpx;  */
   margin-left:15rpx; 
   box-shadow: 0 2px 6px 0 rgba(0,0,0,.12), 0 0 8px 0 rgba(0,0,0,.04);
   position: relative;
}
.faceimage{
  width:317rpx;
  height:292rpx;
}
